<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#151717"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_marginTop="130dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/sob"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="#151717"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="#fff"
        android:textSize="30dp"
        tools:ignore="RtlCompat"></TextView>

    <TextView
        android:id="@+id/soa"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="#151717"
        android:gravity="bottom"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="#fff"
        android:textSize="50dp"
        tools:ignore="RtlCompat"></TextView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_weight="9">
        <LinearLayout
            android:weightSum="6"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/bb1"
                        android:text="("
                        android:textSize="30dp"
                        android:layout_margin="5dp"
                        android:textColor="#020000"
                        android:background="#E6F0F1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bb2"
                        android:text=")"
                        android:textSize="30dp"
                        android:layout_margin="5dp"
                        android:textColor="#000000"
                        android:background="#E6F0F1"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>

                    <Button
                        android:id="@+id/bb3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:background="#E6F0F1"
                        android:text="x!"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="30dp"></Button>

                    <Button
                        android:id="@+id/bb4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:background="#E6F0F1"
                        android:text="x²"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:textSize="30dp"></Button>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="horizontal">
                <Button
                    android:id="@+id/bac"
                    android:text="AC"
                    android:letterSpacing="2"
                    android:textSize="30dp"
                    android:layout_margin="5dp"
                    android:textColor="#0C0000"
                    android:background="#E6F0F1"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>

                <Button
                    android:id="@+id/bc"
                    android:text="C"
                    android:textSize="30dp"
                    android:layout_margin="5dp"
                    android:textColor="#000000"
                    android:background="#E6F0F1"
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>
                <Button
                    android:id="@+id/bcong"
                    android:text="+"
                    android:textSize="30dp"
                    android:layout_margin="5dp"
                    android:textColor="#F8F5F5"
                    android:background="#FDA159"
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </Button>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/b7"
                        android:text="7"
                        android:textSize="30dp"
                        android:layout_margin="5dp"
                        android:textColor="#FBFBFB"
                        android:background="#8D9191"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/b8"
                        android:text="8"
                        android:textSize="30dp"
                        android:layout_margin="5dp"
                        android:textColor="#FDFDFD"
                        android:background="#8D9191"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/b9"
                        android:text="9"
                        android:textSize="30dp"
                        android:layout_margin="5dp"
                        android:textColor="#FFFFFF"
                        android:background="#8D9191"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/btru"
                        android:text="-"
                        android:textSize="30dp"
                        android:layout_margin="5dp"
                        android:textColor="#FDFCFC"
                        android:background="#FDA159"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/b4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:background="#8D9191"
                        android:text="4"
                        android:textColor="#FBFBFB"
                        android:textSize="30dp"></Button>

                    <Button
                        android:id="@+id/b5"
                        android:text="5"
                        android:textSize="30dp"
                        android:textColor="#FDFCFC"
                        android:background="#8D9191"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/b6"
                        android:text="6"
                        android:textSize="30dp"
                        android:layout_margin="5dp"
                        android:textColor="#FDFDFD"
                        android:background="#8D9191"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>

                    <Button
                        android:id="@+id/bnhan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FDA159"
                        android:layout_margin="5dp"
                        android:text="x"
                        android:textAllCaps="false"
                        android:textColor="#FDFDFC"
                        android:textSize="30dp"></Button>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/b1"
                        android:text="1"
                        android:textSize="30dp"
                        android:layout_margin="5dp"
                        android:textColor="#FFFFFF"
                        android:background="#8D9191"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/b2"
                        android:text="2"
                        android:textSize="30dp"
                        android:layout_margin="5dp"
                        android:textColor="#FDFDFD"
                        android:background="#8D9191"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>

                    <Button
                        android:id="@+id/b3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        android:background="#8D9191"
                        android:text="3"
                        android:textColor="#FFFFFF"
                        android:textSize="30dp"></Button>

                    <Button
                        android:id="@+id/bchia"
                        android:text="÷"
                        android:textSize="30dp"
                        android:layout_margin="5dp"
                        android:textColor="#FFFFFF"
                        android:background="#FDA159"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/b0"
                        android:text="0"
                        android:textSize="30dp"
                        android:layout_margin="5dp"
                        android:textColor="#FFFFFF"
                        android:background="#8D9191"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bcham"
                        android:text="."
                        android:textSize="30dp"
                        android:layout_margin="5dp"
                        android:textColor="#FFFFFF"
                        android:background="#8D9191"
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>
                    <Button
                        android:id="@+id/bbang"
                        android:text="="
                        android:textSize="30dp"
                        android:layout_margin="5dp"
                        android:textColor="#FFFFFF"
                        android:background="#FDA159"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Button>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>